    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_outline_star_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="학습 강의 제목"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tx_category"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="카테고리 번호"
        app:layout_constraintTop_toBottomOf="@id/tx_title"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tx_category2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="카테고리 번호2"
        app:layout_constraintTop_toBottomOf="@id/tx_category"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tx_videoId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="비디오 Id"
        app:layout_constraintTop_toBottomOf="@id/tx_category2"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>