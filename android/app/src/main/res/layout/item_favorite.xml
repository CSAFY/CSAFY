<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@color/main_green2"
        app:srcCompat="@drawable/ic_outline_star_24"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="학습 강의 제목"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/img_thumbnail"
        />

    <TextView
        android:id="@+id/tx_category"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="카테고리 번호"
        app:layout_constraintTop_toBottomOf="@id/tx_title"
        />

    <TextView
        android:id="@+id/tx_category2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="카테고리 번호2"
        app:layout_constraintTop_toBottomOf="@id/tx_category"
        />

    <TextView
        android:id="@+id/tx_videoId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="비디오 Id"
        app:layout_constraintTop_toBottomOf="@id/tx_category2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>