<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.csafy.csafy_android.fragment.TestFragment">

    <TextView
        android:id="@+id/tx_test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="CS 테스트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tx_content"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/tx_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="학습한 내용을 바탕으로 자신의 실력을 \n 테스트해보며 부족한 부분을 찾아보세요"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tx_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnOX"
        />

    <Button
        android:id="@+id/btnOX"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="O / X"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btn_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnQuiz"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:text="4지선다"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/btn_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOX"
        />


</androidx.constraintlayout.widget.ConstraintLayout>