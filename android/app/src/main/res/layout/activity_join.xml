<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JoinActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/join_btn_close"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tx_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tx_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/img_logo"
            app:layout_constraintLeft_toLeftOf="@id/et_id"
            app:layout_constraintBottom_toTopOf="@id/et_id"

            />

        <TextView
            android:id="@+id/tx_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력한 이메일로 본인 확인 메일이 전송됩니다."
            android:textSize="12sp"
            android:textColor="#a7a7a7"
            app:layout_constraintTop_toTopOf="@id/tx_id"
            app:layout_constraintRight_toRightOf="@id/et_id"
            app:layout_constraintBottom_toBottomOf="@id/tx_id"
            />


        <EditText
            android:id="@+id/et_id"
            android:layout_width="324dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_outline"
            android:hint="이메일 주소"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/tx_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tx_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/et_id"
            app:layout_constraintLeft_toLeftOf="@id/et_pw"
            app:layout_constraintBottom_toTopOf="@id/et_pw"
            />

        <TextView
            android:id="@+id/tx_pw_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영문+숫자 최소 8자리 이상 입력해주세요."
            android:textSize="12sp"
            android:textColor="#a7a7a7"
            app:layout_constraintTop_toTopOf="@id/tx_pw"
            app:layout_constraintRight_toRightOf="@id/et_pw"
            app:layout_constraintBottom_toBottomOf="@id/tx_pw"
            />


        <EditText
            android:id="@+id/et_pw"
            android:layout_width="324dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_outline"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tx_pw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:id="@+id/et_pw_check"
            android:layout_width="324dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_outline"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="15dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/et_pw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <CheckBox
            android:id="@+id/check_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/et_pw_check"
            app:layout_constraintLeft_toLeftOf="@id/et_pw_check"
            />

        <TextView
            android:id="@+id/tx_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[필수] C;SAFY 이용 약관 동의"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/check_1"
            app:layout_constraintBottom_toBottomOf="@id/check_1"
            app:layout_constraintLeft_toRightOf="@id/check_1"
            />

        <CheckBox
            android:id="@+id/check_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/check_1"
            app:layout_constraintLeft_toLeftOf="@id/check_1"
            />

        <TextView
            android:id="@+id/tx_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[필수] 개인정보 수집 및 이용 동의"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/check_2"
            app:layout_constraintBottom_toBottomOf="@id/check_2"
            app:layout_constraintLeft_toRightOf="@id/check_2"
            />

        <Button
            android:id="@+id/btn_join"
            android:layout_width="324dp"
            android:layout_height="57dp"
            android:text="가입하기"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_round"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/check_2"
            app:layout_constraintBottom_toBottomOf="parent"

            />











    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>