<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/interview_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/tx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학습 강의 제목"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/img_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tx_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 번호"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tx_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tx_category2"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/tx_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 번호2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="14dp"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@id/tx_category"
            app:layout_constraintStart_toEndOf="@id/tx_category"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>